/**
 * Fishing Lure App - Main Entry Point
 * With RevenueCat Subscriptions
 */

import React, { useEffect, useState } from 'react';
import { NavigationContainer } from '@react-navigation/native';
import { createStackNavigator } from '@react-navigation/stack';
import { ActivityIndicator, View, StyleSheet } from 'react-native';

// Import screens
import HomeScreen from './src/screens/HomeScreen';
import CameraScreen from './src/screens/CameraScreen';
import ResultsScreen from './src/screens/ResultsScreen';
import TackleBoxScreen from './src/screens/TackleBoxScreen';
import PaywallScreen from './src/screens/PaywallScreen'; // NEW!

// Import services
import { getCurrentUser } from './src/services/supabaseService';
import { initializeSubscriptions } from './src/services/subscriptionService'; // NEW!

const Stack = createStackNavigator();

export default function App() {
  const [isReady, setIsReady] = useState(false);
  const [isAuthenticated, setIsAuthenticated] = useState(false);
  
  useEffect(() => {
    initializeApp();
  }, []);
  
  const initializeApp = async () => {
    try {
      console.log('[App] Initializing...');
      
      // Wait for auth
      const user = await getCurrentUser();
      
      if (user) {
        console.log('[App] User authenticated:', user.id);
        setIsAuthenticated(true);
        
        // Initialize RevenueCat with user ID
        const result = await initializeSubscriptions(user.id);
        if (result.success) {
          console.log('[App] âœ“ Subscriptions initialized');
        } else {
          console.warn('[App] âš  Subscriptions init failed:', result.error);
        }
      } else {
        console.log('[App] No user authenticated');
        setIsAuthenticated(false);
      }
      
      setIsReady(true);
    } catch (error) {
      console.error('[App] Init error:', error);
      setIsReady(true);
    }
  };
  
  if (!isReady) {
    return (
      <View style={styles.loadingContainer}>
        <ActivityIndicator size="large" color="#2196F3" />
      </View>
    );
  }
  
  return (
    <NavigationContainer>
      <Stack.Navigator
        initialRouteName="Home"
        screenOptions={{
          headerStyle: {
            backgroundColor: '#2196F3',
          },
          headerTintColor: '#fff',
          headerTitleStyle: {
            fontWeight: 'bold',
          },
        }}
      >
        <Stack.Screen 
          name="Home" 
          component={HomeScreen}
          options={{ title: 'ðŸŽ£ Fishing Lure Identifier' }}
        />
        <Stack.Screen 
          name="Camera" 
          component={CameraScreen}
          options={{ title: 'Scan Lure' }}
        />
        <Stack.Screen 
          name="Results" 
          component={ResultsScreen}
          options={{ title: 'Analysis Results' }}
        />
        <Stack.Screen 
          name="TackleBox" 
          component={TackleBoxScreen}
          options={{ title: 'My Tackle Box' }}
        />
        
        {/* NEW: Paywall Screen */}
        <Stack.Screen 
          name="Paywall" 
          component={PaywallScreen}
          options={{ 
            title: 'Upgrade to PRO',
            presentation: 'modal'
          }}
        />
      </Stack.Navigator>
    </NavigationContainer>
  );
}

const styles = StyleSheet.create({
  loadingContainer: {
    flex: 1,
    justifyContent: 'center',
    alignItems: 'center',
    backgroundColor: '#fff',
  },
});

